<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_light_gray_rounded"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder_foreground" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="John Doe"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Hi, I am Earnest Reyes and I will be very glad to help you!"
            android:textColor="#424141"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="Specialties:"
            android:textColor="#3C3B3B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/specialty_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pipelines"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/specialty_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puso mo"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/specialty_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loving you"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/specialty_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BlahBlahBlah"
            android:textColor="#999"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
