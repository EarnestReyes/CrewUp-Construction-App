<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Fragments_Reyes"
        parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Window background (THIS is what matters) -->
        <item name="android:windowBackground">@color/bg_color</item>

        <!-- Surface -->
        <item name="colorSurface">@color/card_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="Theme.Fragments_Reyes"
        parent="Base.Theme.Fragments_Reyes" />

</resources>
