            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.BookingPersonalInfo"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.Permission"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.WelcomeBookingPage"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="auth.UserDetails"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="workers.home.NotificationsWorker"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.posts.OnCamera"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.Notifications"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.profile.UserProfile"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="workers.auth.WorkerSignUp"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="workers.app.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.home.SearchUserActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
