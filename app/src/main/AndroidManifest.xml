<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ConstructionApp">

    <!-- ================= PERMISSIONS ================= -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Android 12 and below -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- ================= APPLICATION ================= -->
    <application
        android:name="app.MyAppOneSignal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fragments_Reyes">

        <!-- ✅ OneSignal App ID (DECLARE ONCE ONLY) -->
        <meta-data
            android:name="onesignal_app_id"
            android:value="b1a8faac-dde0-4e43-b1f1-8dbd1cd3d340" />
        <meta-data
            android:name="com.onesignal.NotificationIcon"
            android:resource="@drawable/crewup_logo" />


        <!-- ================= ACTIVITIES ================= -->

        <activity
            android:name="workers.app.UserAroundLocation"
            android:exported="false"
            android:screenOrientation="fullSensor" />

        <activity
            android:name="app.WorkersLocationMap"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.RealTimeLocation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="workers.auth.TopUpWallet"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.ServiceBreakdown"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="clients.chat.ReviewDetails"
            android:exported="false"
